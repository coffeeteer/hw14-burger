<h1>Eat-A-Burger</h1>

<h2>Nope I'm not devoured.</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}} 
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR!</button>
        </form>

        {{!-- {{> burgers/delete-burger}} --}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Man I'm starving</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">EAT!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Cook a Burger!</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Hungry?</label><br>
    <input type="radio" name="devouredy" value="1" checked> Full!<br>
    <input type="radio" name="devoured" value="0"> Hungry.
  </div>

  <button type="submit">Gimme Burger</button>
</form>
